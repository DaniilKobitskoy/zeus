<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context="view.GameView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:background="#2F60F4">

            <ImageView
                android:id="@+id/pauseBtn"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/pause" />

            <TextView
                android:id="@+id/moves"
                style="@style/customButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="11dp"
                android:layout_weight="1"
                android:text="Motion : 0" />

            <TextView
                android:id="@+id/time"
                style="@style/customButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="11dp"
                android:layout_weight="1"
                android:text="Time : 0:00" />


        </LinearLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:columnCount="3">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn1"
                style="@style/customButton"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_margin="9dp"
                android:background="@drawable/bg_btn"
                android:onClick="btnClick"
                android:tag="btn1"
                android:text="@string/question_mark"
                android:textSize="50sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn2"
                style="@style/customButton"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_margin="9dp"
                android:background="@drawable/bg_btn"
                android:onClick="btnClick"
                android:tag="btn2"
                android:text="@string/question_mark"
                android:textSize="50sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn3"
                style="@style/customButton"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_margin="9dp"
                android:background="@drawable/bg_btn"
                android:onClick="btnClick"
                android:tag="btn3"
                android:text="@string/question_mark"
                android:textSize="50sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn4"
                style="@style/customButton"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_margin="9dp"
                android:onClick="btnClick"
                android:tag="btn4"
                android:text="@string/question_mark"
                android:textSize="50sp"
                android:background="@drawable/bg_btn" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn5"
                style="@style/customButton"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_margin="9dp"
                android:background="@drawable/bg_btn"
                android:onClick="btnClick"
                android:tag="btn5"
                android:text="@string/question_mark"
                android:textSize="50sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn6"
                style="@style/customButton"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_margin="9dp"
                android:background="@drawable/bg_btn"
                android:onClick="btnClick"
                android:tag="btn6"
                android:text="@string/question_mark"
                android:textSize="50sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn7"
                style="@style/customButton"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_margin="9dp"
                android:background="@drawable/bg_btn"
                android:onClick="btnClick"
                android:tag="btn7"
                android:text="@string/question_mark"
                android:textSize="50sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn8"
                style="@style/customButton"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_margin="9dp"
                android:background="@drawable/bg_btn"
                android:onClick="btnClick"
                android:tag="btn8"
                android:text="@string/question_mark"
                android:textSize="50sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn9"
                style="@style/customButton"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_margin="9dp"
                android:background="@drawable/bg_btn"
                android:onClick="btnClick"
                android:tag="btn9"
                android:text="@string/question_mark"
                android:textSize="50sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn10"
                style="@style/customButton"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_margin="9dp"
                android:background="@drawable/bg_btn"
                android:onClick="btnClick"
                android:tag="btn10"
                android:text="@string/question_mark"
                android:textSize="50sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn11"
                style="@style/customButton"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_margin="9dp"
                android:background="@drawable/bg_btn"
                android:onClick="btnClick"
                android:tag="btn11"
                android:text="@string/question_mark"
                android:textSize="50sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn12"
                style="@style/customButton"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_margin="9dp"
                android:background="@drawable/bg_btn"
                android:onClick="btnClick"
                android:tag="btn12"
                android:text="@string/question_mark"
                android:textSize="50sp" />

        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2F60F4"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                style="@style/customButton"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="11dp"
                android:text="Score :" />

            <TextView
                android:id="@+id/highestMoves"
                style="@style/customButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="11dp"
                android:background="@drawable/radius_view"
                android:backgroundTint="#fff"
                android:paddingLeft="4dp"
                android:paddingTop="6dp"
                android:paddingRight="4dp"
                android:paddingBottom="6dp"
                android:text="Motion : 0"
                android:textColor="#ECC757"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/highestTime"
                style="@style/customButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/radius_view"
                android:backgroundTint="#fff"
                android:paddingLeft="4dp"
                android:paddingTop="6dp"
                android:paddingRight="4dp"
                android:paddingBottom="6dp"
                android:text="Time : 0:00"
                android:textColor="#ECC757"
                android:textSize="20sp" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>